@model LibraryManagmentSystemIdentity.Models.BooksModel

@{
    ViewData["Title"] = "Create";
}

<h1>Add Book</h1>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="BookName" class="control-label"></label>
        <input asp-for="BookName" class="form-control" required />
        <span asp-validation-for="BookName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AuthorId" class="control-label">Select Author</label>
        <select asp-for="AuthorId" class="form-control">
            <option value="">-- Select Author --</option>
            @if (ViewBag.Authors != null)
            {
                foreach (var item in ViewBag.Authors)
                {
                    <option value="@item.AuthorId">@item.AuthorName</option>
                }
            }
        </select>
        <span asp-validation-for="AuthorId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add Book</button>
</form>
