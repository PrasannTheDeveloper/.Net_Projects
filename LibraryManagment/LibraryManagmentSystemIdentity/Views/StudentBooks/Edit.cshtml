@model LibraryManagmentSystemIdentity.Models.StudentBooksModel

<h2 class="text-center">Edit Borrowed Book Record</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="StudentId" />
    <input type="hidden" asp-for="BookId" />

    <div class="form-group">
        <label asp-for="BorrowedDate" class="control-label">Borrowed Date</label>
        <input asp-for="BorrowedDate" type="date" class="form-control" />
        <span asp-validation-for="BorrowedDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ReturnDate" class="control-label">Return Date</label>
        <input asp-for="ReturnDate" type="date" class="form-control" />
        <span asp-validation-for="ReturnDate" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary btn-lg">Update Record</button>
        <a asp-action="Index" class="btn btn-secondary btn-lg ml-3">Back to List</a>
    </div>
</form>
