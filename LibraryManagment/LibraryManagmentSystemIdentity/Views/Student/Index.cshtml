@model IEnumerable<LibraryManagmentSystemIdentity.Models.StudentsModel>

<h2>Students List</h2>
<a asp-action="Create" class="btn btn-success">Add New Student</a>

<!-- Search bar for filtering students -->
<div class="mb-3">
    <input type="text" id="searchStudent" class="form-control" placeholder="Search by Name or Email" onkeyup="searchTable()">
</div>

<!-- Students Table -->
<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark" style="background-color:antiquewhite;">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Address</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Age</th>
            <th>College</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody id="studentTableBody">
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.StudentId</td>
                <td>@student.StudentName</td>
                <td>@student.StudentAddress</td>
                <td>@student.StudentEmail</td>
                <td>@student.StudentPhone</td>
                <td>@student.StudentAge</td>
                <td>@student.College.CollegeName</td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-route-id="@student.StudentId">Edit</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm" asp-route-id="@student.StudentId" onclick="return confirm('Are you sure you want to delete this student?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination -->
<div id="pagination">
    <button id="prevPage">Previous</button>
    <span id="pageInfo"></span>
    <button id="nextPage">Next</button>
</div>

<!-- Script for search functionality -->
<script>
    function searchTable() {
        var input, filter, table, tr, td, i, txtValue;
        input = document.getElementById("searchStudent");
        filter = input.value.toLowerCase();
        table = document.querySelector("table");
        tr = table.getElementsByTagName("tr");

        for (i = 1; i < tr.length; i++) {
            td = tr[i].getElementsByTagName("td");
            var matchFound = false;

            for (var j = 0; j < td.length; j++) {
                if (td[j]) {
                    txtValue = td[j].textContent || td[j].innerText;
                    if (txtValue.toLowerCase().indexOf(filter) > -1) {
                        matchFound = true;
                    }
                }
            }

            tr[i].style.display = matchFound ? "" : "none";
        }
    }

    // Pagination
    let currentPage = 1;
    let rowsPerPage = 5;
    let rows = $("#studentTableBody tr");

    function showPage(page) {
        let start = (page - 1) * rowsPerPage;
        let end = start + rowsPerPage;
        rows.hide().slice(start, end).show();
        $("#pageInfo").text(`Page ${page} of ${Math.ceil(rows.length / rowsPerPage)}`);
    }

    $("#prevPage").on("click", function () {
        if (currentPage > 1) showPage(--currentPage);
    });

    $("#nextPage").on("click", function () {
        if (currentPage < Math.ceil(rows.length / rowsPerPage)) showPage(++currentPage);
    });

    showPage(1);
</script>
