@model LibraryManagmentSystemIdentity.Models.StudentsModel

<h2>Create Student</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="StudentName" class="control-label"></label>
        <input asp-for="StudentName" class="form-control" placeholder="Enter student name" required />
        <span asp-validation-for="StudentName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StudentEmail" class="control-label"></label>
        <input asp-for="StudentEmail" class="form-control" placeholder="Enter student email" required />
        <span asp-validation-for="StudentEmail" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StudentPhone" class="control-label"></label>
        <input asp-for="StudentPhone" class="form-control" placeholder="Enter student phone" required />
        <span asp-validation-for="StudentPhone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StudentAddress" class="control-label"></label>
        <input asp-for="StudentAddress" class="form-control" placeholder="Enter student address" required />
        <span asp-validation-for="StudentAddress" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StudentAge" class="control-label"></label>
        <input asp-for="StudentAge" class="form-control" placeholder="Enter student age" required />
        <span asp-validation-for="StudentAge" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CollegeId" class="control-label"></label>
        <select asp-for="CollegeId" class="form-control" asp-items="@(new SelectList(ViewBag.Colleges, "CollegeId", "CollegeName"))" required>
            <option value="">Select a College</option>
        </select>
        <span asp-validation-for="CollegeId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

<a asp-action="Index" class="btn btn-secondary mt-3">Back to Student List</a>
